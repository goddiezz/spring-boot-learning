<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.loorzve.boot.mybatisplus.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="top.loorzve.boot.mybatisplus.entity.User">
    <!--@mbg.generated-->
    <!--@Table `user`-->
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="age" jdbcType="INTEGER" property="age" />
    <result column="email" jdbcType="VARCHAR" property="email" />
  </resultMap>

  <select id="findUser" resultType="top.loorzve.boot.mybatisplus.entity.User">
  SELECT id,name,age,email
  FROM user
  <trim prefix="WHERE" prefixOverrides="AND|OR"
  suffixOverrides="AND|OR">
  <if test="name != null and name != '' ">
  AND name = #{name}
</if>
<if test="email != null and email != '' ">
        AND email= #{email}
        </if>
        </trim>
        </select>

